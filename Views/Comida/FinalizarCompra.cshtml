        function obtenerDatosComercio() {
            debugger;
            var urlAction;
            urlAction = '@Url.Action("ObtenerDatosComercio", "Comida")';
            $.ajax({
                    type: "POST",
                    url: urlAction,
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
