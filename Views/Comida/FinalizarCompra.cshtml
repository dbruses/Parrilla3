                location.href = '@Url.Action("Index", "Comida")';
                $("#btnCancelar").prop("disabled", true);
                $("#btnPagar").prop("disabled", true);
                $("#observaciones").prop("disabled", true);
                $("#chkPagoEfectivo").prop("disabled", true);
                $("#pagaCon").prop("disabled", true);
            },
