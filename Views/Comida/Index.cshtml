@section Scripts {
    <script src="~/Scripts/Comida/Comida.js"></script>
    <script type="text/javascript">
        function AgregaCarrito() {
            let ing = "";
            let sel = "";
            $("input:radio:checked").each(function () {
                sel = sel + $(this).val() + ",";
            });
            if (sel != "") {
                sel = sel.substring(0, sel.length - 1);
            }

            $("input:checkbox:checked").each(function () {
                ing = ing + $(this).val() + ",";
            });
            if (ing != "") {
                ing = ing.substring(0, ing.length - 1);
            }

            if (sel != "") {
                ing = sel + " - " + ing;
            }

            $.ajax({
                type: "POST",
                url: '@Url.Action("CargaCarrito", "Comida")',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify({
                    id: document.getElementById("idComida").value,
                    cantidad: document.getElementById("cantidad").value,
                    ingredientes: ing
                }),
                success: function (result) {
                    //alert(result);
                    location.href = '@Url.Action("Index", "Comida")';
                },
                async: true,
                error: function (xhr, status, p3, p4) {
                    alert("Error");
                }
            });
        }

        function cuentaIngredientes(cant,ing) {
            let i = 0;
            $("input:checkbox:checked").each(function () {
                i = i + 1;
                if (i > cant) {
                    alert("Solo puede elegir " + cant + " ingredientes!");
                    document.getElementById(ing).checked = false;
                }
            });
        }
    </script>
}
